<templateSet group="Perl Buratino API doc block">
  <template name="pod" value="=pod&#10;@apiVersion $version$&#10;@api {$method$} / $Title$&#10;@apiName $cmd$&#10;@apiGroup $group$&#10;&#10;@apiParam {string} cmd '$cmd$'&#10;$END$&#10;=cut&#10;" description="Buratino APi description block" toReformat="true" toShortenFQNames="true">
    <variable name="version" expression="" defaultValue="&quot;0.0.1&quot;" alwaysStopAt="true" />
    <variable name="method" expression="" defaultValue="&quot;post&quot;" alwaysStopAt="true" />
    <variable name="Title" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="group" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="cmd" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PERL5" value="true" />
    </context>
  </template>
  <template name="param" value="@apiParam {$Type$} $name$ $description$" description="param description" toReformat="false" toShortenFQNames="true">
    <variable name="Type" expression="" defaultValue="&quot;string&quot;" alwaysStopAt="true" />
    <variable name="name" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="description" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="POD" value="true" />
    </context>
  </template>
  <template name="use" value="@apiUse $BLOCK_NAME$" description="Use defined block" toReformat="false" toShortenFQNames="true">
    <variable name="BLOCK_NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="POD" value="true" />
    </context>
  </template>
  <template name="suc" value="@apiSuccess ($Group$){$TYPE$} $VAR$ $DESCR$" description="success result" toReformat="false" toShortenFQNames="true">
    <variable name="Group" expression="" defaultValue="&quot;200&quot;" alwaysStopAt="true" />
    <variable name="TYPE" expression="camelCase(String)" defaultValue="" alwaysStopAt="true" />
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="DESCR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PERL5" value="true" />
      <option name="POD" value="true" />
    </context>
  </template>
  <template name="ee" value="@apiErrorExample {$Type$}&#10;    $Error_name$&#10;    {$error_code$}&#10;$END$" description="Error example" toReformat="false" toShortenFQNames="true">
    <variable name="Type" expression="" defaultValue="&quot;json&quot;" alwaysStopAt="true" />
    <variable name="Error_name" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="error_code" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="POD" value="true" />
    </context>
  </template>
</templateSet>